<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ff563fff"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context="ru.ifmo.md.lesson8.WeatherActivity$PlaceholderFragment">

    <ImageView
        android:id="@+id/iconWeatherBig"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/weather_icon"/>

    <Space
        android:layout_width="10dp"
        android:layout_height="10dp"
        />

    <TextView
        android:id="@+id/temperatureTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="17°C / 21°C"
        android:textColor="@android:color/white"
        android:textSize="@dimen/abc_text_size_display_2_material"/>

    <Space
        android:layout_width="10dp"
        android:layout_height="10dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/humidityTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="91%"
                android:textColor="@android:color/white"
                android:textSize="@dimen/abc_text_size_large_material"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/humidity"
                android:textColor="#ff7da4ff"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/windTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="24 km/h"
                android:textColor="@android:color/white"
                android:textSize="@dimen/abc_text_size_large_material"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/wind"
                android:textColor="#ff7da4ff"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pressureTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1028 mb"
                android:textColor="@android:color/white"
                android:textSize="@dimen/abc_text_size_large_material"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/pressure"
                android:textColor="#ff7da4ff"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="10dp"
        android:layout_height="30dp"/>

    <ImageView
        android:id="@+id/separatorImageView"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/separatorContent"
        android:src="@drawable/separator"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="#ff563fff"/>

</LinearLayout>
